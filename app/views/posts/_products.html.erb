<div class="container my-3">
  <h2 class="text-center mb-4">Produtos em Destaque</h2>

  <div id="productCarousel" class="carousel slide" data-bs-ride="carousel">
    <div class="d-inline-flex carousel-inner">

      <div class="carousel-item active">
        <div class="row">
          <% %w[Grãos Soja Graneleiros Milho Avicultura].each do |item| %>
            <div class="col-md-4 my-2">
              <div class="card">
                <img src="<%= image_path('grains.jpg') %>" class="card-img-top" alt="<%= item %>">
                <div class="card-body text-center">
                  <h5 class="card-title">Produto 1</h5>
                  <p class="card-text">Descrição breve do produto 1.</p>
                  <p class="text-primary fw-bold">R$ 99,90</p>
                  <a href="#" class="btn btn-success">Comprar</a>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Controles do Carrossel -->
    <button class="carousel-control-prev" type="button" data-bs-target="#productCarousel" data-bs-slide="prev">
      <span class="carousel-control-prev-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Anterior</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#productCarousel" data-bs-slide="next">
      <span class="carousel-control-next-icon" aria-hidden="true"></span>
      <span class="visually-hidden">Próximo</span>
    </button>

  </div>
</div>